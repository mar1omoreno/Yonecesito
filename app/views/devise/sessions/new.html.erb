<div class="row top-buffer80">
	<div class="col-md-4 col-md-offset-4">
		<h4><%= @esconder_facebook? "Profesionista" : "Cliente" %></h4>
		<h4>Bienvenido, te estábamos esperando</h4>
	</div>
</div>
<div class="row top-buffer30">
	<div class="col-md-4 col-md-push-4 grey paddingform">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		<% flash.each do |name, msg| %>
			<% if msg.class == Array %>
				<% msg.each do |message| %>
			      <%= content_tag :div, message, :id => "flash_#{name}" %>
				<% end %>
			<% else %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
		<% end %>
		
			<div class="form-group">
				<!--<label for="exampleMail">Correo electrónico</label>
				<input type="email" class="form-control" id="exampleMail" placeholder="">-->
				<%= f.label :Correo_electrónico %><br />
    			<%= f.email_field :email, autofocus: true, :class => 'form-control' %>
			</div>
			<div class="form-group">
				<!--<label for="examplePassword">Contraseña</label>
				<input type="password" class="form-control" id="examplePassword" placeholder="">-->				
    			<%= f.label :Contraseña %><br />
    			<%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
			</div>
				<!--<button type="button" class="btn btn-primary creaCuenta">Entrar</button>-->
				<%= f.submit "Entrar", :class => 'btn btn-primary creaCuenta' %>
		<% end %>
	</div>
</div>
<% if !@esconder_facebook %>
<div >
	<div class="row top-buffer10">
		<div class="col-md-6 col-md-offset-3 text-center">
			<h4>Ó</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 paddingform">
			<!--<button type="button" class="btn btn-primary creaCuentaFB text-center">
				<i class="fa fa-facebook fa-2x whitelinks"></i> 
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Entrar con Facebook</button>-->
				<%= render "devise/shared/links" %>			
		</div>
	</div>
</div>
<% end %>
<div class="row">
	<div class="col-md-3 col-md-offset-4">
		<!--<a href="#" class="text-left">Olvide mi contraseña</a>-->
		<%= link_to "Olvide mi contraseña", new_password_path(resource_name), :class=>'text-left' %>				
	</div>
	<div class="col-md-2 col-md-pull-1 text-right">
		<!--<a href="#">Crear cuenta nueva</a>-->
		<%= link_to "Crear cuenta nueva", new_registration_path(resource_name) %>				
	</div>			
</div>
<div class="row top-buffer150 footerbck">
</div>	